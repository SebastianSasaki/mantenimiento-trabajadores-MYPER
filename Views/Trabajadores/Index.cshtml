@{
    ViewData["Title"] = "Mantenimiento de Trabajadores";
}

@model IEnumerable<MantenimientoTrabajadores.Models.Trabajador>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Mantenimiento de Trabajadores</h2>
        <div>
          <label for="filtroSexo" class="me-2">Filtrar por sexo:</label>
          <select id="filtroSexo" name="filtroSexo" class="form-select d-inline-block w-auto">
            @{
              var sexoSeleccionado = ViewBag.SexoSeleccionado as string;
            }

            @if (string.IsNullOrEmpty(sexoSeleccionado))
            {
              <option value="" selected="@(sexoSeleccionado == "")">Todos</option>
            }
            else
            {
              <option value="">Todos</option>
            }
            <option value="Masculino" selected="@(sexoSeleccionado == "Masculino")">Masculino</option>
            <option value="Femenino" selected="@(sexoSeleccionado == "Femenino")">Femenino</option>
          </select>
        </div>
    </div>

    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#modalNuevo">Nuevo Trabajador</button>

    <table class="table table-bordered" id="tablaTrabajadores">
      <thead class="table-dark">
        <tr>
          <th>Foto</th>
          <th>Nombres</th>
          <th>Apellidos</th>
          <th>Sexo</th>
          <th>Tipo Doc</th>
          <th>N° Documento</th>
          <th>Fecha Nac.</th>
          <th>Dirección</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var t in Model)
          {
            <tr class="@(t.Sexo == "Masculino" ? "table-primary" : t.Sexo == "Femenino" ? "table-warning" : "")">
              <td>
                @if (!string.IsNullOrEmpty(t.FotoUrl))
                  {
                    <img src="@t.FotoUrl" width="50" class="rounded" />
                  }
              </td>
              <td>@t.Nombres</td>
              <td>@t.Apellidos</td>
              <td>@t.Sexo</td>
              <td>@t.TipoDocumento</td>
              <td>@t.NumeroDocumento</td>
              <td>@(t.FechaNacimiento.HasValue ? t.FechaNacimiento.Value.ToShortDateString() : "")</td>
              <td>@t.Direccion</td>
              <td>
                <button class="btn btn-sm btn-warning btnEditar" data-id="@t.Id">Editar</button>
                <button class="btn btn-sm btn-danger btnEliminar" data-id="@t.Id">Eliminar</button>
              </td>
            </tr>
          }
      </tbody>
    </table>
</div>

<!-- Modal Nuevo -->
<div class="modal fade" id="modalNuevo" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="formNuevo" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Nuevo Trabajador</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="text" name="Nombres" class="form-control mb-2" placeholder="Nombres" required>
                    <input type="text" name="Apellidos" class="form-control mb-2" placeholder="Apellidos" required>
                    <input type="text" name="TipoDocumento" class="form-control mb-2" placeholder="Tipo Documento">
                    <input type="text" name="NumeroDocumento" class="form-control mb-2" placeholder="Número Documento">
                    <select name="Sexo" class="form-select mb-2">
                        <option value="">Seleccione Sexo</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                    </select>
                    <input type="date" name="FechaNacimiento" class="form-control mb-2">
                    <input type="file" name="foto" class="form-control mb-2">
                    <input type="text" name="Direccion" class="form-control mb-2" placeholder="Dirección">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Agregar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="modalEditar" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="formEditar" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Trabajador</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" id="editId">

                    <input type="text" name="Nombres" id="editNombres" class="form-control mb-2" placeholder="Nombres" required>
                    <input type="text" name="Apellidos" id="editApellidos" class="form-control mb-2" placeholder="Apellidos" required>
                    <input type="text" name="TipoDocumento" id="editTipoDocumento" class="form-control mb-2" placeholder="Tipo Documento">
                    <input type="text" name="NumeroDocumento" id="editNumeroDocumento" class="form-control mb-2" placeholder="Número Documento">
                    
                    <select name="Sexo" id="editSexo" class="form-select mb-2">
                        <option value="">Seleccione Sexo</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                    </select>

                    <input type="date" name="FechaNacimiento" id="editFechaNacimiento" class="form-control mb-2">
                    <input type="file" name="foto" id="editFoto" class="form-control mb-2">
                    <input type="text" name="Direccion" id="editDireccion" class="form-control mb-2" placeholder="Dirección">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-warning">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/trabajadores.js"></script>
}

